{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".", // This sets the base directory for non-relative module names
    "paths": {
      "@/*": ["src/*"], // Adjusted to point to the src directory
      "@assets/*": ["assets/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
